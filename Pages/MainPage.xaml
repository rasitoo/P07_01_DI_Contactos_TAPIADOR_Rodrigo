<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.Data.Entities"
             xmlns:pagemodels="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.PageModels"
             x:Class="P07_01_DI_Contactos_TAPIADOR_rodrigo.Pages.MainPage"
             x:DataType="pagemodels:MainPageModel">
    <!--Ejemplo de https://github.com/dotnet/maui-samples/blob/main/9.0/UserInterface/Views/CollectionViewDemos/CollectionViewDemos/Views/Grouping/VerticalListGroupingPage.xaml-->
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Artistas"
                   FontAttributes="Bold"
                   FontSize="Title"
                />
            <CollectionView ItemsSource="{Binding Artists}"
                            IsGrouped="True"
                            ItemsLayout="HorizontalGrid, 3"
                            >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Artist">
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image 
                               Source="{Binding Artist_logo}" 
                               Aspect="AspectFill"
                               HeightRequest="60" 
                               WidthRequest="60" />
                            <Label Grid.Row="1" 
                               Text="{Binding Name}" 
                               FontAttributes="Bold" /> 
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Discos"
                   FontAttributes="Bold"
                   FontSize="Title"
                />
            <CollectionView ItemsSource="{Binding Albums}"
                            IsGrouped="True"
                            ItemsLayout="HorizontalGrid, 3"
                            >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Album">
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image 
                               Source="{Binding Picture}" 
                               Aspect="AspectFill"
                               HeightRequest="60" 
                               WidthRequest="60" />
                            <Label Grid.Row="1" 
                               Text="{Binding Title}" 
                               FontAttributes="Bold" />
                            <Label Grid.Row="1" 
                               Text="{Binding Artist.Name}" 
                               FontAttributes="None" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Canciones"
                   FontAttributes="Bold"
                   FontSize="Title"
                />
            <CollectionView ItemsSource="{Binding Songs}"
                IsGrouped="True"
                ItemsLayout="HorizontalGrid, 3"
                >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Song">
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image 
                               Source="{Binding Album.Picture}" 
                               Aspect="AspectFill"
                               HeightRequest="60" 
                               WidthRequest="60" 
                               Grid.RowSpan="3"/>
                            <Label Grid.Row="1" 
                               Grid.Column="2"
                               Text="{Binding Title}" 
                               FontAttributes="Bold" />
                            <Label Grid.Row="2" 
                               Grid.Column="2"
                               Text="{Binding Album.Artist.Name}" 
                               FontAttributes="None" />
                            <Label Grid.Row="2" 
                               Grid.Column="2"
                               Text="{Binding Album.Title}" 
                               FontAttributes="None" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Playlists"
                   FontAttributes="Bold"
                   FontSize="Title"
                />
            <CollectionView ItemsSource="{Binding Playlists}"
                IsGrouped="True"
                ItemsLayout="HorizontalGrid, 3"
                >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Playlist">
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image 
                               Source="{Binding Picture}" 
                               Aspect="AspectFill"
                               HeightRequest="60" 
                               WidthRequest="60" />
                            <Label Grid.Row="1" 
                               Text="{Binding Title}" 
                               FontAttributes="Bold" />
                            <Label Grid.Row="1" 
                               Text="{Binding Artist.Name}" 
                               FontAttributes="None" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
