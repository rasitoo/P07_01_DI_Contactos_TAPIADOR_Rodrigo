<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.Models"
             xmlns:pagemodels="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.PageModels"
             x:Class="P07_01_DI_Contactos_TAPIADOR_rodrigo.Pages.PlaylistsPage"
             Title="PlaylistsPage"
             x:DataType="pagemodels:PlaylistsPageModel">
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <Label Text="Mis playlists"
               FontAttributes="Bold"
               FontSize="Title"/>
        <CollectionView ItemsSource="{Binding Playlists}"
                IsGrouped="True"
                ItemsLayout="HorizontalGrid, 3"
                >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Playlist">
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!--<Image 
                   Source="{Binding Picture}" 
                   Aspect="AspectFill"
                   HeightRequest="60" 
                   WidthRequest="60" />-->
                        <Label Grid.Row="1" 
                           Text="{Binding Title}" 
                           FontAttributes="Bold" /> 
                        <Label Grid.Row="2" 
                           Text="{Binding Description}" 
                           FontAttributes="None" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>