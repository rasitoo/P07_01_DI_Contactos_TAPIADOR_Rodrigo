<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.Models"
             xmlns:pagemodels="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.PageModels"
             x:Class="P07_01_DI_Contactos_TAPIADOR_rodrigo.Pages.FavoritesPage"
             Title="FavoritesPage"
             x:DataType="pagemodels:FavoritesPageModel">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label Text="Canciones favoritas"
           FontAttributes="Bold"
           FontSize="Title"/>
        <CollectionView ItemsSource="{Binding FavoriteSongs}"
                IsGrouped="True"
                ItemsLayout="HorizontalGrid, 3"
                >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Song">
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image 
                   Source="{Binding Album.Picture}" 
                   Aspect="AspectFill"
                   HeightRequest="60" 
                   WidthRequest="60" 
                   Grid.RowSpan="3"/>
                        <Label Grid.Row="1" 
                   Grid.Column="2"
                   Text="{Binding Title}" 
                   FontAttributes="Bold" />
                        <Label Grid.Row="2" 
                   Grid.Column="2"
                   Text="{Binding Album.Artist.Name}" 
                   FontAttributes="None" />
                        <Label Grid.Row="2" 
                   Grid.Column="2"
                   Text="{Binding Album.Title}" 
                   FontAttributes="None" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>